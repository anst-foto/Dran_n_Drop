<Window x:Class="Dran_n_Drop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Dran_n_Drop"
        
        Title="MainWindow" 
        
        Height="450" Width="800">
    <Window.DataContext>
        <local:MainWindowViewModel/>
    </Window.DataContext>
    
    <Window.Resources>
        <DataTemplate x:Key="Template_ListOfColors"
                      DataType="{x:Type TypeName=SolidColorBrush}">
            <TextBlock Text="{Binding Path=Color}"
                       Background="{Binding}"
                       Foreground="White"
                       Width="200" Height="50"/>
        </DataTemplate>
    </Window.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <StackPanel Grid.Column="0" >
            <ListBox ItemsSource="{Binding Path=ListOfColors}"
                     ItemTemplate="{StaticResource ResourceKey=Template_ListOfColors}"
                     SelectionMode="Single"
                     SelectedItem="{Binding Path=SelectedColor}"/>
            
            <StackPanel Orientation="Vertical">
                <CheckBox Content="Rectangle"
                          IsChecked="{Binding Path=IsRectangle}"/>
                <CheckBox Content="Ellipse"
                          IsChecked="{Binding Path=IsEllipse}"/>
            </StackPanel>
        </StackPanel>
        
        <StackPanel Orientation="Vertical"
                    Grid.Column="1">
            <Rectangle Fill="{Binding Path=ColorRectangle}" 
                       Width="100" Height="100"
                       Stroke="Black" StrokeThickness="3"
                       Margin="20"/>
            <Ellipse Fill="{Binding Path=ColorEllipse}"
                     Width="100" Height="100"
                     Stroke="Black" StrokeThickness="3"
                     Margin="20"/>
        </StackPanel>
    </Grid>
</Window>
